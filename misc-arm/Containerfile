FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:2e048c43efc5e13520bf9ee7017cc5606ee160ad8695e89349838911e8de99ef

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
