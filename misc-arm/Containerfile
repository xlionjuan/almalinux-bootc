FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:095471f405aca2e2ab06ff527301c0a28736049ad450da185617269b632788f7

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
