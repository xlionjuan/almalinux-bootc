FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:32c2841940a83571eb91c47f1ee82f03149a15bb9c52a34fd504b5a45d8ae593

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
