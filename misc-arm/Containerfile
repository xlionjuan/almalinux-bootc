FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:c2c2fbe391af462856a3b07a717cdb2ee5fe0c8658db31a8fa3bc6a5c47212e1

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
