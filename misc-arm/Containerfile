FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:9f9f811deb0839176ba78d03678657365d0fdc9bd15ab65b8d4c72fff760becb

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
