FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:f7788f4a554586ce6541f61a72402ea77338e08b5db1b6bce08aff6bb2acef7f

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
