FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:3441345d12ceb14fb78bd7a51ca6120c5766d8e1bc2ea45a85e028f2b060e772

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
