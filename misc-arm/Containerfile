FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:0f77ab856dbc12155582f0635ad184fa8a14c3ad8fcc38efb7f2d732ed9fe7e9

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
