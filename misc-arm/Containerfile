FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:3813ab72b96d745c726882a5ecdfa08433f3661cb8bed96cd3a755a4e69a8ae6

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
