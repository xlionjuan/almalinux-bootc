FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:1e3dfed500e2761f1ee399074095639a12abdd56c394a4083ff8d17052d482ba

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
