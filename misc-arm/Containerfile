FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:6e789316f0a1b50497ff95f1fc67518dfbd5cd8457ddac539c38a5ffe69ad0a6

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
