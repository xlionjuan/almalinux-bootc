FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:1660cf408b052a708e13548f5a191d814e0a3c232c9cff57576333b6e836cde0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
