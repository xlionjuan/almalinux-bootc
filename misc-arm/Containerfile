FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:9f2349936948a920a37109a30766d453b0b9a33a55764fb7e03548457b3834b2

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
