FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:30d56cd98b7db522c29554acaa666425f95c7a1e0ea5a2b6fee435300255ce99

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
