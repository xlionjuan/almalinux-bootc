FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:4a7fdf212356626a594acd2f75fd9c95e169175f81f4d292ab54335309d2f9b0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
