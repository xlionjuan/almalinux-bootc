FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:a8b06bd2e914a23aa7f64bd18769966eae16e03e5e4571d39703cc88bfa2eafc

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
