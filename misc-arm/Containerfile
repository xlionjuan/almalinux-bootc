FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:67e13ee46a34e69ad54271026ad8ce7a8d953f311823e04906e0cbacd9ae552e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
