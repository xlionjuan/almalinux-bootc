FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:bc8b4fc75df388f3095c3b16646eb6a2a7a82a0684bf81cf7c2e91a38323bf4a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
