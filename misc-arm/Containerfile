FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:3f130451052021563599c34e10aef43f4988b3ff1d76d6a5aac4f0141c588d0d

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
