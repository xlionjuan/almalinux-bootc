FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:6bf58be1b9547b5338496dfadfc9956c69bf636ec1934335555332f017dd03f0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
