FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:fe8690a8832b25d3bda0e4258183aa7e33b88269f4a6a1bec66c51dc6597872a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
