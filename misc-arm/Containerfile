FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:8dd62e4551750201ecb0a891744a5026063498df9c2a2f796d8c48808a5263fe

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
