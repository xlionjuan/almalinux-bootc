FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:795906c565e8072d95971304066619f27f8d10f692e5d36494126cdbf1566beb

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
