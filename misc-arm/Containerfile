FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:bba97440a96ecd5eefd28190eb692cd1666931113dd1250b494d3013bd0c4aba

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
