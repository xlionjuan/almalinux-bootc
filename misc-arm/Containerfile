FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:e4fb0322556cb963c6cbe884ab61736e397bd7a254e65b03738f1cd8e6649248

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
