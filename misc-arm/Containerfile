FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:c2c66be24a58baa4af3eb6863e0c90a66bca5bf16e9a54656000de08ab621a84

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
