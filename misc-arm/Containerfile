FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:6622d3e73d2df916615bc9700ccc5a544bef77ceb8cfb4b88849268a16c9c338

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
