FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:c0ec741be37136bd345c0e64127ae588eed85d834769fa437486c98956bc01b8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
