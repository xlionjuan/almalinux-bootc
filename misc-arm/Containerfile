FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:97aa80b62027197eb2f0fb143c27409d9e6dc9dbdb2a9eedef536cec2ec3604e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
