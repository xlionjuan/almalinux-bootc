FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:df3e9cd741c09a66500a2215041b1400b3c9f614632506477eccb8b4d3f2e84c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
