FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:9ed9a658d403d986649850a9b081fc5701795071462a7cb44d5c5efa4b4e0dd8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
