FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:7faf09afb538aea288d6b9f041b432ad7fe3a1df6801e083ddbddff287523fc6

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
