FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:c3cc8ed0d44fd4849777f22c16914903baa20b29acd023d28a274ed614b045c1

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
