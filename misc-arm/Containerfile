FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:449fb9249086b80a3f290e7f70f96131138265bbbb74b35a1f19c039d1796e85

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
