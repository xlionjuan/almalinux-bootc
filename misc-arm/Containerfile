FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:c96f74a597ccfadb62510629b190e6b48e9fad5a50b2e8141fe921b2fa8d300a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
