FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:9b135f48dd5f4d12f61fe841e9fa8632cef8f66f333cb14819177ca8c3d8f18f

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
