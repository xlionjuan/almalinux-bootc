FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:398aeeca1b6a17caa27f86f46c9cc639e61e6fb9ece057ab624fdf1266f11ed1

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
