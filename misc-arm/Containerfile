FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:ffef760c0184d486898bd69ec876df74e1f018d5ebd382061aab79f1c78bd136

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
