FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:d03fc8af48e0e8d4ab8b5781914626d788348591f9929e1417ab8e078aa3d691

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
