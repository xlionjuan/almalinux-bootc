FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:ef216a2951b0bd92b7b3ad40e6fa2f72d22e35cfa7c83e8e5abffd29fffa6bad

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
