FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:aea75b9d0b9b7b2d129128a214710b4d580078fb7cd6874e1492e28819345a7f

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
