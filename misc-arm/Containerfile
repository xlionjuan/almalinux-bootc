FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:ad2a704177706cd6bdd6d27d96d76904abd501c7a08cef6b13de52c3c897c63e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
