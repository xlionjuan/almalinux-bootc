FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:da377b412842f4179e596a683cd4a794ca5caa280b0c18b2f7b9a8a24375db14

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
