FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:43e6823b666c17c4560ed3c38e04af079831006be51e78162bea464d392324bf

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
