FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:a6f59b4d391c7cf861f28654a4f98cdc318b76b1dbde1b966f263bffed0a8bd1

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
