FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:5180c6659137bf61270c4c8155dd0085af2c397ca3381840614b6ad39abd4b0c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
