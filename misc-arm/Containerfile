FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:87a301b9adcc38ada23c3f7f1e1bec51c8922342845d278fd73aa451c002546c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
