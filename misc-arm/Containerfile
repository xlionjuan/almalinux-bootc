FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:2a98ae64f615306686bcb0a7aa059f0da2b3dca7b9096fb9e73a2fe127a3f104

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
