FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:f76a05a107608a19f3dcb568423da929d3edc51d00ab22a71aa043b93cd21b0a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
