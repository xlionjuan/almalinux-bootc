FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:3cf3dfea3d1fb93b46ce2b0a896187797760a7d92c8e7efad3a7550ef338ed28

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
