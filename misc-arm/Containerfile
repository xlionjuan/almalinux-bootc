FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:b30e4849d156d5eb4e7ac389e84c4f92f7163dfe44ab1f5282fc53b63f201571

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
