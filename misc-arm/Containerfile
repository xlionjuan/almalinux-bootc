FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:ada041242e88924fbe76a6ce3f37c0c5d746e2a7f0c4f2815f286cabeaeea1d0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
