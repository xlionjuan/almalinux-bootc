FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:11821d4552612ef0dda6f377c40595f34fa489716bc70234cbd91fe1406dbf87

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
