FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:4b5fb59fb2053e79e739e3b62917817c42e9f8e16323951e12655fdb67a8e2e3

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
