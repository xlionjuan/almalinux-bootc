FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:f6e6be83c5a04ce18ca6def940ab358dbfbd80de5dd05c26cf1291063f0e7e5a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
