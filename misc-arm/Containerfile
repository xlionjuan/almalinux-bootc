FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:a40eb2c8f02e81f60e5273c6a2d59cb527d15abd42d3aa470beb948aa25ec505

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
