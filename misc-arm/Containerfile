FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:f5ef3f7ac9f8af39f1f6e8fff3ebcb24b88e1d122ac70a4b3a8c8bd1d8a2eebf

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
