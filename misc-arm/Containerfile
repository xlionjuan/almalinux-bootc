FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:0a019afb4a7300a737d9ca1d9860f11558c01e881b511a4677b1e19a77782003

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
