FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:c5b06060019fd16c3db7e29a20e8f552750d181b5ea8e8156f41e603156dfd4a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
