FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:f8c096d24f49c787d0cba21e4e42b1e0038c2341e9cc8e23f529f0322056119f

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
