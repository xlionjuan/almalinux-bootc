FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:ab4f49c5416d83c431c87e3aa2bd1e116828aeeb6243388627f428d0c1e55ec9

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
