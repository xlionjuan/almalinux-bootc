FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:884685f92c8252259450233eefc86f66e8a3cee71b66ba96781366c672607899

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
