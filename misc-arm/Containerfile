FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:7791b50b3bdf37eccbbcdb29968451985340ef14d5211f99190fb02a3561e262

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
