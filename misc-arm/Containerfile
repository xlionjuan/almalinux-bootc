FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:a6a60656e51d1e5ea3623aaa6affa916e5ef662adf7cf291160a238ae3569722

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
