FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:989757fb17c073e409d66529e37b071b3c9c099d4ba90f562c34655b98beb577

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
