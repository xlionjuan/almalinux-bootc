FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker-arm@sha256:bb180efe83eea42d26a79b85708ed89fda3ff1ceb8588af2eb058251784f9257

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
