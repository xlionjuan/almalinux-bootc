FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:49c4d2ee8dc43d3bb3c0b9dc6d6dc035474de5c9b18aa4ee3ff7049975070c69

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
