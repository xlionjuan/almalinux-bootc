FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:af8d49cdce085752c093f01e3928f7e32212c2c27916966d7d37ec110e3eccad

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
