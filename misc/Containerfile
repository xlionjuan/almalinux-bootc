FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:29501674b2a5f769f8c41ec5cece42097b30471300f21c570ad3fcfd6f3c287e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
