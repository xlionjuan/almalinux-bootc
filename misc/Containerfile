FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:5e8452deddab78ce3b6539cce6ec89d16f41a68f6944fd24b737cb79ebfa817d

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
