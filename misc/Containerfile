FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:5b2e1a524dc3a261b8e2e657d9c3185c0117b6d2db7ecab92d4bc639a6a38e36

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
