FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:0c5b5fa09c44fac8b788bbe6d43cb19405478fe51be989cc1fce576e79025888

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
