FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:74f9770942cd7a27b78d93c7e26c22e0a2eba36a61a2e9894afa2aa523ab5c06

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
