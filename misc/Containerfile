FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:46ea1d37a9a12a7cc6ba850f4ec43df3e28bb1f10129666aa5ac708feb31b9d3

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
