FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:782e66d94fbc6e21cdd70d870353d0509d861d2ca8dea21f0a6178c470e2267c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
