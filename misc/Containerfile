FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:f85dd08403298ad8f0817f48414a0087dd9d7a1c2b3053ab4cf3b2f0142d3f34

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
