FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:64ff94cb81c38a401bc5e3c69a7635c3af277a4b0c609e92ccf211e1bad9676d

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
