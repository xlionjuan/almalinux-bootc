FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:4dcf574557be473e438068babb3a3bc1ff9002b5c6ef04c0d72ee2a0ecc3f714

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
