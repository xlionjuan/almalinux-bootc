FROM ghcr.io/xlionjuan/almalinux-bootc:base-docker@sha256:36ca7fd3ff0f0681bec47d671efdc03f483493f941327654b115751648ec4ea6

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
