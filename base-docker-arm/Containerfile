FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:5b32d014255ffef73c8b77b5fba9fa8e6cdb9d30bc99d18758a684e9440fe806

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
