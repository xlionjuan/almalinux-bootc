FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:2d84e436d0cecc9957d0ede11c1c91d8baa4f293ac4408cdfa31c4c3994764b0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
