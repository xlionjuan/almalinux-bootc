FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:97627b131529552ab18db1a5c30a02a79143fbb424cde0ec56462a21c60424ab

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
