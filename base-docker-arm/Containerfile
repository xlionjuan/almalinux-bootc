FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:5e6736313b680a14f8f4bf0c620b5b91877a004bde25d38e5946341e372be37f

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
