FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:c6e788c26a6c6e35167ce28e900761899ee347bb0f58b1894bafdd7e17c339e8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
