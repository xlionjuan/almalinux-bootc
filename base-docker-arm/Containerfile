FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:1bdeb389536a07c06f841dfb385e8bf9269624fe56bde0e6586860cef7796021

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
