FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:d5581f4fc3a8643d285bc2e20f0efe66b0c81f97178138ae737c4a0135d009e0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
