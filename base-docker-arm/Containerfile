FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:65bd9a57c32269fee3e751e21982be524e27281a3ad98b94439b7a70f24459f6

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
