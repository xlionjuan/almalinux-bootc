FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:9095854f6cc457f01650d76fe9ac2dc5ad03364b26eab773275f63c2ad4e6273

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
