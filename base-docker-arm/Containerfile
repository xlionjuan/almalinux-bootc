FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:e6921c4af9c1c2b7fcf61e57813df334b3a0b3ec7df595a293dcf2499f99bcaa

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
