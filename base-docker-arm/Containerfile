FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:c0fd78be5f3582a1e18579308fd01b4bd074d031b75875829ede29a9554b14ed

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
