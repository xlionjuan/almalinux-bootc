FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:83691bcd7fae0ff720ce4d1d2f06f01d0d017943efa1f420c89db0b766372849

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
