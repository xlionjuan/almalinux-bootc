FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:182545a916c5ec6081a6b02e99e137ac5dde3662d4be1383b99217b121378bcd

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
