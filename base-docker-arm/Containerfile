FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:50b9b74e6c39abac296361cc49f1f49c21dc2633f00c4ae7f2eeaa6882730ace

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
