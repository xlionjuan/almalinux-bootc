FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:c582c3b61d76c6340d6e325d959123837676ddc1e799d74d9fe1703856d02d1a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
