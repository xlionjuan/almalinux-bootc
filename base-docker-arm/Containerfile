FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:e0d23c97816110c9c849c3935459f7b80551ba7c5a5ec558fe6ed116c93cd45d

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
