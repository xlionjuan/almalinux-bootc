FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:f68c5b328050bb1e002b7a6c401b0311479c7004000abb0fc3bf5ac0cf0ddaa9

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
