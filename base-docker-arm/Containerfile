FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:f84a89d3637e6047df284d21a95cad97a426322c6f416f3d284fb7b303cbe424

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
