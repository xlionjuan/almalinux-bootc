FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:b65776eec241aeaa7d0a51a696db26e1a828101fc17081fbba101b7af2ec56b5

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
