FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:5a4b58e6c58dd2985f3481be50854d44cabcd4aea5a909bb32c1522372209b9c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
