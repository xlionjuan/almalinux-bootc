FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:8e83d9bf49e3bea82dd8886410cc4d429d76a61d0994841f5a19b9557bd7812f

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
