FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:c287fefe844416d13494aefb9a30858c5cfcfe188f13e05677be9319d87af4ce

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
