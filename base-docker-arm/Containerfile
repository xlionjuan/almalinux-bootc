FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:071cf9d74db4f26efb62e5d41af5bc9e55202ecfbc37df0592896f7471a02947

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
