FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:b6fe9a5ab10eaef3dfbd94e64730ee05b0fc22f79584564519e5916dc3ef2317

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
