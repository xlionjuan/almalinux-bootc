FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:14da9c78765b75a2155a6a14dbe8ace37303baf1183553e9cd591fd03f883564

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
