FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:448688ff265799e5d13330f37fd567cd14be2cff5fae0e2d883237a568965f99

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
