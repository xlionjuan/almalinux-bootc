FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:afdf9369e7bac991d295750414a1220a3742f47978c8d12917e2c7046a7a5f8d

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
