FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:8f07c40d9ea740edbd884279f492b51b754a979b3b502386b6e474ee0e79fac5

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
