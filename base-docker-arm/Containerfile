FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:efca1453fd2769db7d88425254669ffc4aef5555f6c299d2f193de85245f183b

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
