FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:6602335b0c1e38f1d6b80700b53f04cbea4e4dcd7e4089263c13328b50d01f91

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
