FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:e949eb79acf9737a1dbf188bf69f295db1b7b2f0902cde3e023831ab1179789a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
