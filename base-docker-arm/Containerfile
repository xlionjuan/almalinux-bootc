FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:747027f7912f43645be7f2a6dabcb3dfa4c0b7cbcc1486bda49d9a4ce1e77911

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
