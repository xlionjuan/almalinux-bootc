FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:69085e71613cdae752408e79e1aeff86a40cbf197a167ba8f72c7ea95e22d784

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
