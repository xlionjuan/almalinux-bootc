FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:a3a5408f4f0174832bbb748f5270bf7d008ea2fb444bcb3f16dbe87af19bd74c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
