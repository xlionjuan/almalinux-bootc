FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:3d73bac3d1afcf5b85bc9618fd8a66987c5d48203e9aae95e1c9ca2280aba7e0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
