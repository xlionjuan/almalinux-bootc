FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:9eaaa6f2b3be5070546caa71b3844a0c46344047996f064538d49ade191ed7f4

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
