FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:400ded6f029e07f1410f61d8eed2c43231893abfbf4bc3afb341b2c5935ab327

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
