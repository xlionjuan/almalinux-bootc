FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:b7dcf85e360b4fead9dfac812bfebe95746ea424b87df8ce9e580a44f46d488e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
