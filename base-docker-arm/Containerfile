FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:a056cd4e6bd6f547263b6fbeae297aa97d9e29d64ba0877af5f2166653696289

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
