FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:9263b944d967a487a2a5b65c9d070b4371c6c17d71e4d4c1414af403e3726d11

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
