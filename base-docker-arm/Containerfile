FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:fef21b62f8a9f53586256470d63449416fb119e7020313f14ae62f9fe6e143ed

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
