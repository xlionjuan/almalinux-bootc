FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:c7a8457ef97df80043db4fab2770b824939badaf3aa3c5a313410861f9fd2e8e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
