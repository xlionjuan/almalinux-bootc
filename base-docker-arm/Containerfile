FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:2556f6c872afc895300748575cd7aaea117723fc3c7641d02c1d0df33258bfc0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
