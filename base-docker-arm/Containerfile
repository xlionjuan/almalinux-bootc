FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:5fd1a16d32bcea3f9a46bf9c694996e70612a79f528cc08cc52eab6550b24e00

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
