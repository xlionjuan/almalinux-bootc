FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:44335debc3f6c4d2f8110da4056b9bfee76b1918a764475d9a360306a490211e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
