FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:7694abd1dac376490ac0ec8892019896ba2de625edf0f16399dd9d317cf34055

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
