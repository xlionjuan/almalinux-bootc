FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:5e7ea1d2ac1ce47be949046d81002e5dbfd81f9322fa3976a57aad6bb7d016c5

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
