FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:3e238bef2f705a6a5b18fea2cd3367bd3b15e3a0d9d7f6db318fd87ac0c7e179

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
