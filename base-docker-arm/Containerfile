FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:29e624d44b13c72ada3c4b443ec584e5c693707cf79c61143652d24c0450cae5

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
