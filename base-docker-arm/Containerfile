FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:2f99860a3027583c04a2e86d0b1a79d5bbb0fb96150b629ce853e53407910af2

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
