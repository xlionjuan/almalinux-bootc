FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:3de6fe3cfc8eff725f1fc97bc585919460a50c3c03c280277e2d7e432f952491

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
