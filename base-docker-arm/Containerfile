FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:dba5c3a0681f215f9560152d95d006c497d4d9182cf322e8a79d585eb9937ba2

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
