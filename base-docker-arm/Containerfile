FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:de19407a78a5861d994eab279360721f07b88152e1deadb0c43b0371494bb5f9

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
