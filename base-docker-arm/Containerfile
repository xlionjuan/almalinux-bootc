FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:f1d6449316ce382b118911bf58eba911789c6ed6f1d9feaa2bccad8360347547

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
