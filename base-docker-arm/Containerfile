FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:4c551b5836acd25708759a30b821d6393c50d9c1379bdaf7bc10e0e13150e31c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
