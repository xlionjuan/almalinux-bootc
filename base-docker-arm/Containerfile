FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:a8f642816804aa9d3b22039d2055148a636c2ee5198a28e8bf165e18962343a6

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
