FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:ef28378301085af36fe7ae7e5e97c391862a6970dce3186a21d864575131205e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
