FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:00800d6ffa9344c04f04e6fd7cd9d55be73d6f5bf1fd12efbb94034cbe02e920

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
