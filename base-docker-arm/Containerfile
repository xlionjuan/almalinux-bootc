FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:72e4c9cdec6e5aedb7bc6641f8ab4b0f1cc80d7111d9273e8b05f116e036d4b8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
