FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:ea18ae0bfffe77887d4b05b771f341ff67ff4942d8b4f87f6639485e85383e00

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
