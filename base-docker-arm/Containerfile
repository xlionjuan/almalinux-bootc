FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:bea0e3fcdc215927cedd392b92378aabd9df246239ecbd07ac13d35cdb747f86

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
