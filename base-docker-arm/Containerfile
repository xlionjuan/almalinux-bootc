FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:f822ccbc3fb9772dc2c6bc3d793dedab84347b4db8bac3209e4b3a0d91191e1c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
