FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:21166463ee244e7b1bfc8121e455ffb6a61167a329e0be0404606e7f408093ad

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
