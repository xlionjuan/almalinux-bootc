FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:55c8dcdfa2980f089b4573b15e7caea1e0a8aafc7b4e0cb7942bb18b0265c266

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
