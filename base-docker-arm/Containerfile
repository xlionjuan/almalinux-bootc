FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:916720393f4fb44b518716be2f987afdc11f6429153ba14dc9194523ec66d027

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
