FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:437061ce8db845288792ffe9c3f7feb3845fe806e8e9dc85896780acbf7b3954

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
