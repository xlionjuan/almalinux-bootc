FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:fe61830e014585b1e39fba2db938ebe22ac32471ab080b3dae6080d8a690c9c1

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
