FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:5b745be4d24659eee579b7d316c22428980cd8db741934a6b5469e0b4bfe09f6

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
