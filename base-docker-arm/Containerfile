FROM ghcr.io/xlionjuan/almalinux-bootc:base-arm@sha256:e63dbf07b8259e4e42a5968907caaa8c7fd9a1832c3dab61d6ccf6af20dc05b5

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
