FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:5049fbab42a67edf0a2368996d84f266aeaa7f6c580d3b9c19b56aa0d46d66a9

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
