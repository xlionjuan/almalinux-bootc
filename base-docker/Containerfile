FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:090eee5087f021729b9885383c071faf338484b89a56501e455d539afd586962

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
