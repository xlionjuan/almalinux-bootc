FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:389c4d2b5c3f05e687a7c562673195b4160c4956610a55c6bb3171b44dba62fd

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
