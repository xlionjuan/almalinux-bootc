FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:7947f930931d4870087bf68f687d7a2fb6d90129a434ee408c02cef9c2a9e8e0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
