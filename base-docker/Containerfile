FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:51490f64bfa939fd3cd1405f710039a6c295d69b23802f85d23287de0d1f7ae3

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
