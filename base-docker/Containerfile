FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:ee07f56b84ec3d172b9fe713d9e9e4b8edd64e8bc8871c5d72da95064d14b0a6

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
