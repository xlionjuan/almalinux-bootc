FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:e11471df64ddb7653aab798be829bdd034fd6359d3f17a328f8bddb3bdc47cc4

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
