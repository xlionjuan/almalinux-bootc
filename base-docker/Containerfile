FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:65420b4c64a3f60afe7148ae51a58999b8f6a545c71292cf2e31481d94e0f4c9

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
