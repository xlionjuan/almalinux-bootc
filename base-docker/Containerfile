FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:fe622574ea55b5f902a22cad24c527a8707ac59341d242bc77a6e86e4c107644

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
