FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:670f7bd82bb31714c1632c05bd24552cd1f69f257bab0e63d782ab378b30d54e

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
