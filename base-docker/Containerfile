FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:204f2eef644e6d31ba3f25d60c58bca169a02a038107e46f37af0f75c9c03ea8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
