FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:0d06a35fa226bf46b6c863e00d59b600d2a9685c1031d68b0f987fb88f2ad378

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
