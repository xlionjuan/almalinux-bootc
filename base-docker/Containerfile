FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:cbeb3831a95c80ccc57f8b3d95e58cf07dde5b4b1fbf3e6f3d9b2b8749880c90

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
