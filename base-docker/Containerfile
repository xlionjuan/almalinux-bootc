FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:554a0d02768cdf063135628470ff02cdbbfce363f13db6d78fdecc860cea14ae

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
