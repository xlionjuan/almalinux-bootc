FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:f352b3c1e9c798d8ec170c8701e178e9a5b5a519bacc027f34b9649ee6d8422b

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
