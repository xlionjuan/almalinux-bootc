FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:ce3824a418723f2282414dce7451943af97091103f0f2c2ab82b1a5573980258

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
