FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:255f9376a9310c60611320bd7ef48983d7d8a126d011d817cfbc4d36bc17c141

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
