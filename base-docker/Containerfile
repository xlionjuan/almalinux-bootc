FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:325cab2f7ccfc5d57dc4c719b64f2985d0ce385b20b392f9f57b02b0727e01c8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
