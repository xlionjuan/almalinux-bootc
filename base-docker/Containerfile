FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:ed635790ac40c8e241b44cf0d1753e2d357f5d52241ec9cda49ef8710b696aff

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
