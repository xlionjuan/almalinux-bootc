FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:38fa116b53ab640fb4bf3095610881b76ef530af6037fef95b778b3afec14b0c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
