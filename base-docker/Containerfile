FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:de6614e8e7f7687e29c5e46374490664d21f5ed0b3f96ae2d6a9d4fc196bb3e8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
