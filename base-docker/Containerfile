FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:061503a1971c5f82aa172948d6870e43dda8b09b339cfc821030c24971313037

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
