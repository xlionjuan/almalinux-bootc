FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:b5149be39b64745e81b15ea825251c1ff71cede80ab4a3f964d535462ac0c025

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
