FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:3e32b22aa39f14fc17e9ad2ba5d2bbd89e6ee19b382b6971e5b01095f4d9a71c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
