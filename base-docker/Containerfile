FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:e242393e6bf8816a9c95c1786b949968fad4e9bfa3fa711824e0c8a26de3bc39

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
