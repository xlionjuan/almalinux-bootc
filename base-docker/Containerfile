FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:cb26f8594faf3e645dcfed267e05f323030ccb77ee516b7d1773da22975f26e8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
