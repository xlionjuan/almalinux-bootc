FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:52a6d55b325d31c99cecfe835f601b7dcd82fd841056403a6abb39002eb027dd

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
