FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:6b9e64a28f36bbe265fb9ce44ca7f843f947e2765b084e1965a636fa02af6730

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
