FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:97378a11ca5b81b13c77ac41889872b45826e73ec50515753a11c3e44f6b5d2a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
