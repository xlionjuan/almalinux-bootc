FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:1e3bdcee44550f5d9965c85b8274dfba7c3ad94bf3023dd1ccf21f175838705d

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
