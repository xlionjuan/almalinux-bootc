FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:2afcdb45ef4baeb1a916e3240ba4568935eb3235da3158ab5c9710101e5313e3

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
