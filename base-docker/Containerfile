FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:06b912c597d33424b3f5ecc72e45e14bca68921f338fb6d16550720b8b3992e7

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
