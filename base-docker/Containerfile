FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:b8e80d3168697f72973191273b888149a6106d4d96eedaa2b18724ad47ad0b8d

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
