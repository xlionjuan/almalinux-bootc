FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:9878b6e30e983c0207af11872e3d48853e7095d9e354648216474dfb1cd77d31

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
