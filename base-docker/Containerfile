FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:47c582a448343b740ecb5687ab86c5b6e74f3007329fa2b7faabdaa1345472f8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
