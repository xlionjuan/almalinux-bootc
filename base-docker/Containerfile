FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:97f4eebfd0236988b549ff6c171a01a7df1f1adb0020ee6b003522ba25fb8431

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
