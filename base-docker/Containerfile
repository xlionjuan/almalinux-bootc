FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:8f155873ea02d332d0517f4bf396a2f6409f99dfe2e4ad7b1a0f8b5ff827b921

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
