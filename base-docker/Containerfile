FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:c17f4edb8cba4d6ddcc8cc81f192366886145972f25838a97578b0d7e09d1c96

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
