FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:b3b9fa300fc28fa465e59edea22cc08ee742d862c4bf81311b6b031ce0def020

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
