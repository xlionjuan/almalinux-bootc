FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:c88b4ed99e2c27bf0541de8c096d36a3e9975933270a8b075c4102b6a95fad4a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
