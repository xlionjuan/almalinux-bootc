FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:899c109b4666e48b09875782f1565d41609c1bb933ae08d5b23f1dc94b96040d

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
