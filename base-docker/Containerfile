FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:8272bb5a25417bab32a43639601711a856eb46c4c8522ed632da65f704ed7d96

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
