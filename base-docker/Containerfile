FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:b329a2ba82484f495e3915865eaf50db37ba0b0e5545c30ba5638a604c104f23

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
