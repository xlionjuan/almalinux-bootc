FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:d3fa5d0bac9dc6455c5f2f3f398fc3900818bcc642701cd0e3a7a5e72007a80c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
