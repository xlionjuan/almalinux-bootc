FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:4646e2e541d7fd6652886bae8b2025ce58010ab29999d23a796cb681c2f9f6f8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
