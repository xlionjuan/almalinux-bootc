FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:908472786f604591993846b27bd320729e87e02c83c7c025d86c9efa661741be

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
