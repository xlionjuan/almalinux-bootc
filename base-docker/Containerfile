FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:fff6dc3bf30551eb867ba1db97ceac298de73f97146ecadc72f649930b363588

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
