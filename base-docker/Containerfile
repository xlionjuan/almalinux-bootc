FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:23ef1b945970a8526d643f478aaec55e60b16d98ede0dde2f07eaf44cb65595c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
