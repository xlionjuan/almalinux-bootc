FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:bfbac3728d1c5d6ace155ebae9025b5f6ee3ac845709a2065ecbe3aa5cb86944

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
