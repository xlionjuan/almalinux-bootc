FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:f88ed15fa3455c6d458bbc10997db473189617be1b66b3a018c862f42259ea25

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
