FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:7c9745562fd1e0da783c96d1325782543e9d6ed6de57b224a717e9de81bbcb33

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
