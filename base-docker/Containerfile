FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:4966a62e25675df505f4eca25152a9eebfeee9b9e7da95abd2d90bbb76c355e7

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
