FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:e239d472427255ae247944111010e7889044cbad1f607edf779203192f79b0a0

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
