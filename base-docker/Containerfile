FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:6c46817e7216efa52417da45586a7fd4eca660b9b3c99a16ce5522e409758c71

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
