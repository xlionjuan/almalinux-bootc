FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:4372f3444357927948f86f1fa91b292e092b0cfb5a7bb8b31b7a4bb4cee48691

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
