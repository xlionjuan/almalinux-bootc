FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:60e5035d10d01b4e6b10189bc76fea54f9c6de45ec40539fce64abfad9a06c63

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
