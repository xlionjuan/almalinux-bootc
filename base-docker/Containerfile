FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:59031f6c8631d0151acc5469cc3e92d5b4019b2fd3e457c6ba505136a2af6e34

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
