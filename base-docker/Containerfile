FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:989b7cbba2fbb6a7b07fac26e6cf1cd2e30cc64b90d7303083a7d737d4e1d0b4

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
