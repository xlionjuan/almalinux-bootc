FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:158786adb3db5ef6d5998d5a22d8cfd5abb1108d36e1885829deed3fce577ac8

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
