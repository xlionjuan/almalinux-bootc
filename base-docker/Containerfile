FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:9ac79f738f5b56846a365a8db6cafc06ffe567cd6ad95e700352fba26ae6e29c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
