FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:0eed75ddca430f20de4cb9bb046ede7fafaecf4e28b884f5ad26c64287b02792

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
