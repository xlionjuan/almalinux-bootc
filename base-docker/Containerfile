FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:b8c8c8b63fab4d4bad3478b5177da5de517fbe6be24d759afc7c198172b29668

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
