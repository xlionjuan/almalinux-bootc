FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:071862a80fbc0cb98669782c027fc6e3ac4ac27d920c095a1a7bff54dfbc4d82

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
