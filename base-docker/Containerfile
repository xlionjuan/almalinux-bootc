FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:8f0e9628acc38fc1dff5c2d86f5bcb667add2a0566c2d927dcbfb0de9fd9c16c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
