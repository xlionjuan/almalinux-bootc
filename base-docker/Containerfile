FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:b06782d504aba36d94c44ba26e48ecf0be6237e4cf35450005cb9172b375cb9a

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
