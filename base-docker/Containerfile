FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:f853dbc54f8622a7a87b0f0a02916104edd5031a9402e60e039c922d4198c563

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
