FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:07868682c2001b58b4156f4aff29f20850eaa5a6ae45abebc925e133a409fae7

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
