FROM ghcr.io/xlionjuan/almalinux-bootc:base@sha256:713b7aa80913a9770ae60691a3ca8c70a2a3f3d7b34f72c3e5bd8eaa4ef9810c

COPY build.sh /tmp/build.sh

RUN mkdir -p /var/lib/alternatives && \
    /tmp/build.sh && \
    dnf clean all && \
    rm -rf /var/log/* && \
    ostree container commit

RUN bootc container lint
